<% @start_time %>

<p>Welcome to the longest word-game!</p>
<p>Here is your grid:</p>
<p> <% @grid %> </p>
<%= @grid.join(" ") %>

<form action="/score">
  <label for="question">Enter your word</label>
  <input type="text" id="question" name="word" placeholder="enter your word">
  <input type="hidden" name="start_time" value="<%= @start_time %>">
  <input type="hidden" name="grid" value="<%= @grid %>">
  <input type="submit" value="Go on!">
</form>









